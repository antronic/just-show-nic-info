doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Just show NIC Info
    style(type="text/css").
      html, body {
        width: 100%;
        height: 100%;
        margin: 0;

        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background: #ddd;
        color: #333;
      }

      #root {
        width: 100%;
        height: 100%;
        display: flex;

        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .ip {
        font-size: 3em;
        font-weight: 700;
        margin: 0;
        animation: ipCome ease .15s;
        text-shadow: 1px 4px 4px rgba(0,0,0, .15);
      }

      @keyframes ipCome {
        0% {
          transform: scale(0.95);
        }
        80% {
          transform: scale(1.15);
        }
        100% {
          transform: scale(1);
        }
      }

      #nic {
        color: #999;
      }
  body
    #root
      p#nic nic:
        = nic
      each ip in ips
        p.ip= ip